h3 {{contacts.length}} contacts


div
  ul.contacts
    li.contact-line(ng-repeat='contact in contacts')
      div.contact-card(ng-mouseover='showDetail=true', ng-mouseout='showDetail=false', ng-class='{expand:showDetail}')
        {{contact.name}}
        {{contact.familiarity}}
        div.detail(ng-class='{active:showDetail}')
          {{contact.events}}
